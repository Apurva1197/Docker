FROM ubuntu:latest
LABEL image="frontendstatic"
RUN apt update 
RUN apt install apache2 unzip -y
RUN rm -rf /var/www/html/index.html
COPY KubernetesAutoClusterAPI.zip /var/www/html/KubernetesAutoClusterAPI.zip
WORKDIR /var/www/html
RUN unzip KubernetesAutoClusterAPI.zip
EXPOSE 80
CMD ["apachectl", "-D" ,"FOREGROUND"]